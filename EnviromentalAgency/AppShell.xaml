<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EnviromentalAgency.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EnviromentalAgency.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Icon="{OnPlatform 'home.png', iOS='home.png', MacCatalyst='home.png'}" />

        <ShellContent
            Title="Sensors"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'sensor.png', iOS='sensor.png', MacCatalyst='sensor.png'}" />

        <ShellContent
            Title="Users"
            ContentTemplate="{DataTemplate views:AllUsersPage}"
            Icon="{OnPlatform 'user.png', iOS='user.png', MacCatalyst='user.png'}" />
        <ShellContent
            Title="Help"
            ContentTemplate="{DataTemplate views:HelpPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
    </TabBar>

</Shell>
